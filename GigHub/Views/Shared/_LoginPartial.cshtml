@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline my-2 my-lg-0" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li><a href="#"><i class="fa-bell"></i></a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle font-weight-bold" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.GetUserName()
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @Html.ActionLink("My upcoming Gigs", "Mine", "Gigs", null, new { @class = "dropdown-item font-weight-bold"})
                    @Html.ActionLink("Gigs I'm Attending", "Attending", "Gigs", null, new { @class = "dropdown-item font-weight-bold"})
                    @Html.ActionLink("Artists I'm Following", "Following", "Gigs", null, new { @class = "dropdown-item font-weight-bold"})
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item font-weight-bold" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </div>
            </li>
        </ul>
    }
}
else
{
    <form class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { id = "registerLink", @class="nav-link font-weight-bold" })</li>
            <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", new { area = "" }, new { id = "loginLink", @class="nav-link font-weight-bold" })</li>
        </ul>
    </form>
}
